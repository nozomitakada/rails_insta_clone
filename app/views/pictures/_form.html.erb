
<div id="main">
  <div class="col-xs-12 main-cent">
    <div class="col-md-5 topsbox">
    </div>
    <div class="col-md-4 pic_new">
          
        <%= form_with(model: @picture, local: true ,url: choose_new_or_edit) do |form| %>
        <% if @picture.errors.any? %>
          <div id="error_explanation">
            <h2><%= @picture.errors.count %>件のエラーがあります。</h2>
            <ul>
      
            <% @picture.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="picture_title">
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
        <div class="picture_title">
          <%= form.label :content %>
          <%= form.text_field :content %>
        </div>
        <%= form.submit %>
      <% end %>
      
      
    </div>
        
    <div class="col-md-3 topsbox">
      
    </div>
  </div>

</div>